// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  cpf       String  @unique
  email     String? @unique
  phone     String  @unique
  role      String
  firstName String
  lastName  String
  password  String?

  childs Child[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Child {
  id        String   @id @default(cuid())
  name      String
  birthDate DateTime
  address   String?
  latitude  Float?
  longitude Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  school     School @relation(fields: [schoolId], references: [id])
  schoolId   String
  guardian   User   @relation(fields: [guardianId], references: [id])
  guardianId String
}

model School {
  id        String @id @default(cuid())
  name      String
  address   String
  latitude  Float
  longitude Float

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  childs    Child[]
}
